<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient               
               android:startColor="@color/ButtonGreen_EndColor"
               android:endColor="@color/ButtonGreen_StartColor"
               android:angle="270" />
            <stroke
               android:width="1dp"
               android:color="@color/gold" />
            <corners
               android:radius="4dp" />
            <padding
               android:left="0dp"
               android:top="10dp"
               android:right="0dp"
               android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
               android:startColor="@color/ButtonGreen_StartColor"
               android:endColor="@color/ButtonGreen_EndColor"
               android:angle="270" />
            <stroke
               android:width="2dp"
               android:color="@color/gold" />
            <corners
               android:radius="4dp" />
            <padding
               android:left="0dp"
               android:top="10dp"
               android:right="0dp"
               android:bottom="10dp" />
        </shape>
    </item>

  <item android:state_enabled="false">
          <shape>
            <gradient
               android:startColor="@color/ButtonA_DisabledStartColor"
               android:endColor="@color/ButtonA_DisabledEndColor"
               android:angle="270" />
            <stroke
               android:width="1dp"
               android:color="@color/ButtonA_BorderColor" />
            <corners
               android:radius="4dp" />
            <padding
               android:left="0dp"
               android:top="10dp"
               android:right="0dp"
               android:bottom="10dp" />
        </shape>
  </item>

    <item>        
        <shape>
            <gradient
               android:startColor="@color/ButtonGreen_StartColor"
               android:endColor="@color/ButtonGreen_EndColor"
               android:angle="270" />
            <stroke
               android:width="1dp"
               android:color="@color/ButtonA_BorderColor" />
            <corners
               android:radius="4dp" />
            <padding
               android:left="0dp"
               android:top="10dp"
               android:right="0dp"
               android:bottom="10dp" />
        </shape>
    </item>
</selector>